class Solution {
    public int scoreDifference(int[] nums) {
        int p1 = 0, p2 = 0;
        boolean firstActive = true; 
        
        for (int i = 0; i < nums.length; i++) {
            if (nums[i] % 2 == 1) firstActive = !firstActive;
            if ((i + 1) % 6 == 0) firstActive = !firstActive;
            
            if (firstActive) p1 += nums[i];
            else     p2 += nums[i];
            
        }
        
        return p1 - p2;
    }
}Â©leetcode
